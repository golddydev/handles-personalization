        []TxOutput{
            TxOutput::new(
                Address::new(Credential::new_validator(test_owner_hash), Option[StakingCredential]::None)
                , Value::lovelace(10000000) + Value::new(AssetClass::new(HANDLE_POLICY, LBL_222 + ("xar12345".encode_utf8())), 1)
